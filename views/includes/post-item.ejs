<article class="post-item">
    <h2><%= post.title %></h2>
    <p class="post-item-author">By <%= post.author_name %></p>
    <p><%= post.summary %></p>
    <div class="post-actions">
        <button class="btn btn-alt">Supprimer le post</button>
        <a href="...">Modifier le post</a>
        <a class="btn" href="/posts/<%= post.id %> ">Voir le post</a>
    </div>
</article>
